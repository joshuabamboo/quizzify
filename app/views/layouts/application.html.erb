                </ul>
              </li>

              <li><%= link_to "Implementation", implementation_path %></li>
              <li><%= link_to "Reporting", reporting_path %></li>          
            </ul>
          </div>
        </div>
      </div>

      <div class="container content">
        <div class="row">
          <div class="col-lg-12">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
        </div><!--/row--> 
      </div> <!-- /container -->

